program begin

  integer suma(integer a, integer b) begin
    return (a+b);
  end

  integer resta(integer c, integer d) begin
    return (c-d);
  end

  integer mod(integer x) begin
    integer res;
    res = -x%2;
    return res;
  end

  void main() begin
    integer a,b,k;

    a=10;
    b=5;

    k = suma(a,b);

    if (k > b) then begin
      suma(a,b);
    end 
    else begin
      resta(a,b);
    end
    
    while(k > b) begin
      suma(a,b);
    end

  end
end