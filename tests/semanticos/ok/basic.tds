program begin

  integer factorial(integer x) begin
    integer aux;
    aux = 1;
    while(x>0) begin
      aux = aux * x;
      x = x-1;
    end
    return aux;
  end

  integer suma(integer a, integer b) begin
    return (a+b);
  end

  integer resta(integer c, integer d) begin
    return (c-d);
  end

  integer mod(integer x) begin
    integer res;
    res = x%2;
    return res;
  end

  bool equals(integer x, integer y) begin
    return (x==y);
  end

  void main() begin
    integer a,b,c,d,k;
    a=1;b=2;c=3;d=4;k=11;

    k = suma(a,b);

    if (k > b) then begin
      suma(a,k);
    end 
    else begin
      resta(a,b);
    end
    b = 1;
    a = b;

    while(a<7) begin
      b = factorial(a);
      a = a-1;
    end

    resta(a,b);
    
    a = factorial(5);

  end
end